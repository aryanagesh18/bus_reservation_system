    <div class="row">
        <?php if ($result->num_rows > 0): ?>
            <?php while ($row = $result->fetch_assoc()): ?>
                <div class="col-md-4">
                    <div class="bus-card">
                        <?php
                        // Check if bus image is NULL, use a default image
                        $bus_image = !empty($row['bus_image']) ? $row['bus_image'] : 'images/default_bus.jpg';
                        ?>
